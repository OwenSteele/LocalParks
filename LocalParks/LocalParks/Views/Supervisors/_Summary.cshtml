@using LocalParks.Models
@model SupervisorModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>@Model.Park.Name Supervisor</h2>

        <input class="btn-dark w3-hover-border-amber w3-hover-text-amber rounded" 
               type="button" 
               value="See Details" 
               onclick="location.href='@Url.Action("Details", "Supervisors", 
                                      new { parkId = Model.Park.ParkId })'" />
    </div>

    <table class="table table-striped table-bordered dt-responsive nowrap w3-center btn rounded">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Tenure</th>
                <th>@Html.DisplayNameFor(model => model.EmergencyNumber)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.FirstName @Model.LastName</td>
                <td>@Model.Tenure()</td>
                <td>@Model.EmergencyNumber</td>
            </tr>
        </tbody>
    </table>
</div>
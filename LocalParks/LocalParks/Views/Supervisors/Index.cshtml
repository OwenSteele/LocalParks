@model ICollection<SupervisorModel>
@{
    ViewData["Title"] = "Our Staff";
}


@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filtering.js"></script>
}

<h1 class="staff-jumbotron-img">
    <span class="p-1 pr-3 pl-3 bg-light rounded">Park Authority Staff</span></h1>

<partial name="_FilterBar" />

<div class="bg-info border-dark text-dark w-auto rounded">Viewing <strong>@Model.Count()</strong> staff members.</div>

@foreach (var staffMember in Model)
{
    <partial name="_Summary" model="staffMember" />
}
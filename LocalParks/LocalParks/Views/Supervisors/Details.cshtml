@model LocalParks.Models.SupervisorModel
@{
    ViewData["Title"] = "Staff Contact details";
}

<div>
    <input class="btn-dark w3-hover-border-amber w3-hover-text-amber rounded" 
           type="button" 
           value="All staff" 
           onclick="location.href='@Url.Action("Index", "Supervisors")'"/>
</div>

<h2>Staff member: @Model.FirstName @Model.LastName</h2>
<table class="table table-striped table-bordered dt-responsive nowrap w3-center btn rounded">
                
    <tbody>
        <tr>
            <th class="w3-right-align">Role</th>
            <td class="w3-left-align">Supervisor</td>
        </tr>
        <tr>
            <th class="w3-right-align">@Html.DisplayNameFor(model => model.Park)</th>
            <td class="w3-left-align">@Model.Park.Name</td>
        </tr>
        <tr>
            <th class="w3-right-align">@Html.DisplayNameFor(model => model.Office) location</th>
            <td class="w3-left-align">@Model.Office @Model.Park.Postcode</td>
        </tr>
        <tr>
            <th class="w3-right-align">@Html.DisplayNameFor(model => model.Email)</th>
            <td class="w3-left-align">
                @Model.Email
            </td>
        </tr>
        <tr>
            <th class="w3-right-align">@Html.DisplayNameFor(model => model.EmergencyNumber)</th>
            <td class="w3-left-align">@Model.EmergencyNumber</td>
        </tr>
    </tbody>
</table>
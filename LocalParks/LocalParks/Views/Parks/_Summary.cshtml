@using LocalParks.Models
@model ParkModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h2>@Model.Name</h2>

        <input class="btn-dark w3-hover-border-amber w3-hover-text-amber rounded" 
               type="button" 
               value="See Details"
               onclick="location.href='@Url.Action("Details", "Parks", 
                                      new { parkId = Model.ParkId })'" />
    </div>

    <table class="table table-striped table-bordered dt-responsive nowrap w3-center btn rounded">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Postcode)</th>
                <th>@Html.DisplayNameFor(model => model.SportClubs)</th>
                <th>@Html.DisplayNameFor(model => model.Events)</th>
                <th>@Html.DisplayNameFor(model => model.OpeningTime)</th>
                <th>@Html.DisplayNameFor(model => model.ClosingTime)</th>
            </tr>
        </thead>
        <tbody>
<tr>
    <td>@Model.Postcode</td>
    <td>@Model.SportClubs.Count()</td>
    <td>@Model.Events.Count()</td>
    <td>@Model.OpeningTime.ToString("hh:mm tt")</td>
    <td>@Model.ClosingTime.ToString("hh:mm tt")</td>
</tr>
        </tbody>
    </table>
</div>
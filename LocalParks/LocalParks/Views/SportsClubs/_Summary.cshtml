@using LocalParks.Models
@model SportsClubModel
    <div class="container m-1">
        <div class="row mw-100 card border d-flex d-inline-flex">
            <div class="col-md">
                <h2 class="bg-light font-weight-bolder text-info">@Model.Name</h2>
            </div>
            <div class="col-md">
                <input class="btn-dark w3-hover-border-amber w3-hover-text-amber rounded"
                       type="button"
                       value="See Details"
                       onclick="location.href='@Url.Action("Details", "SportsClubs",
                                      new { sportsClubId = Model.ClubId })'" />
                <table class="table table-striped table-bordered dt-responsive nowrap w3-center btn rounded">
                    <thead class="thead-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Sport)</th>
                            <th>@Html.DisplayNameFor(model => model.ParkName)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Sport.ToString()</td>
                            <td>@Model.ParkName</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
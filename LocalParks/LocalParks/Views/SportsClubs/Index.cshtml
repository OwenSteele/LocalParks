@model ICollection<SportsClubModel>
@{
    ViewData["Title"] = "Sports Clubs";
}


@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filtering.js"></script>
}
<div class="clubs-jumbotron-img">
    <h1 class="p-1 bg-light rounded">
        Our Sports Clubs
    </h1>
</div>

<partial name="_FilterBar" />

<div class="bg-info border-dark text-dark w-auto rounded">Viewing <strong>@Model.Count()</strong> clubs.</div>


@foreach (var club in Model)
{
    <partial name="_Summary" model="club" />
}
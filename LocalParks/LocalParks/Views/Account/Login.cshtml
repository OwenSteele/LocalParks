@model LoginModel
@{
    ViewData["Title"] = "Login";
}


<div class="row card card-body">
    <div class="col-md-4 offset-md-4 p-1">

        <h1>Login</h1>

        <form asp-controller="Account" asp-action="Login" method="post">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group p-1">
                <label asp-for="@Model.Username"></label>
                <input asp-for="@Model.Username"
                       type="text"
                       class="border-dark rounded form-control"
                       required />
            </div>

            <div class="form-group p-1">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password"
                       type="password"
                       class="border-dark rounded form-control"
                       required />
            </div>

            <div class="form-check p-1">
                <input asp-for="@Model.RememberMe"
                       type="checkbox"
                       class="border-dark rounded form-check-input"
                       required />
                <label asp-for="@Model.RememberMe" class="form-check-input"></label>
            </div>

            <input type="submit" value="login" class="btn-outline-light btn-success rounded p-1" />
        </form>
    </div>
</div>
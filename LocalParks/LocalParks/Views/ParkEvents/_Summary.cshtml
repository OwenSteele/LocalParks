@using LocalParks.Models
@inject IEncryptionService service
@model ParkEventModel
<div class="row summary-row-container" id="event-list-item">
    <div class="col-10 offset-1">
        <a asp-controller="ParkEvents" asp-action="Details"
           asp-route-_lp="@service.Encrypt("eventId",Model.EventId)"
           class="w3-hover-text-amber w3-hover-border-amber">
            <div class="d-flex flex-row flex-wrap flex-md-nowrap justify-content-between m-1 p-1 card border align-items-center">

                <div class="flex-column position-relative">
                    <h2 class="bg-light font-weight-bolder text-info shadow">@Model.Name</h2>
                    <h4 class="alert-warning font-weight-bold">
                        <i class="fa fa-calendar-alt"></i>
                        @Model.Date.ToLongDateString()
                    </h4>
                </div>

                <div class="flex-column position-relative">
                    <p class="rounded border-success text-success font-weight-bolder">
                        <i class="fa fa-compass"></i> @Model.ParkName
                    </p>
                </div>
                <div class="flex-column position-relative border bg-light text-dark pr-3 w-100">
                    <ul class="align-content-center list-unstyled">
                        <li class="bg-secondary rounded-top text-white font-weight-bolder">
                            @Html.DisplayNameFor(model => model.Description)
                        </li>
                        <li class="bg-light rounded-bottom text-black-50 font-weight-bolder">
                            @Model.Description
                        </li>
                    </ul>
                </div>
            </div>
        </a>
    </div>
</div>